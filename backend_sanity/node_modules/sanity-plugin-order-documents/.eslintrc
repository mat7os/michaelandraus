{
  "env": {
    "node": false,
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": ["eslint-config-sanity", "prettier", "prettier/react"],
  "rules": {
    "react/jsx-uses-vars": [2],
    "newline-per-chained-call": 0,
    "sort-imports": 0,
    "prettier/prettier": "error",
    "import/no-extraneous-dependencies": "off",
    "import/unambiguous": "off",
    "react/jsx-uses-react": 1,
    "complexity": ["error", 20],
    "require-await": "off",
    "no-shadow":"off",
    "max-depth": ["error", 4],
    "no-alert": "off"
  },
  "globals": {
    "__DEV__": true
  },
  "settings": {
    "import/ignore": ["\\.css$", ".*node_modules.*", ".*:.*"]
  },
  "plugins": ["import", "prettier", "react"]
}
